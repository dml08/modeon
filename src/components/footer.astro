---
import { Icon } from "astro-icon/components";
import HeroImage from "~/components/hero-image.astro";
import type { FooterLink } from "~/types";

const links: Array<FooterLink> = [
  {
    url: "https://www.youtube.com/@ModeOnBanda",
    description: "Youtube",
    icon: "mdi:youtube",
  },
  {
    url: "https://www.instagram.com/modeonbanda/",
    description: "Instagram",
    icon: "mdi:instagram",
  },
  {
    url: "https://open.spotify.com/intl-es/artist/3jmEQvB5lF3LAe9hDgO0rm",
    description: "Spotify",
    icon: "mdi:spotify",
  },
  {
    url: "https://www.facebook.com/modeonbanda",
    description: "Facebook",
    icon: "mdi:facebook",
  },
];
---

<footer class="relative flex h-64 items-center justify-center bg-black">
  <ul class="relative grid grid-cols-2 gap-4 sm:grid-cols-4">
    {
      links.map((link) => (
        <li>
          <a
            class="flex size-16 items-center justify-center rounded-full border-2 border-current p-4"
            href={link.url}
          >
            <span class="sr-only">{link.description}</span>
            <Icon class="size-full" name={link.icon} />
          </a>
        </li>
      ))
    }
  </ul>
</footer>
